@model ShippingCompany

<form asp-action="Add_Update">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                @(Model.Id == 0 ? "Add Shipping Company" : "Edit Shipping Company")
            </h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="Name" class="col-form-label col-1"></label>
            <div class="col-11">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="Phone" class="col-form-label col-1"></label>
            <div class="col-11">
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="Address" class="col-form-label col-1"></label>
            <div class="col-11">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-primary">@(Model.Id == 0 ? "Add" : "Edit")</button>
        <a asp-action="index" class="btn btn-secondary">Back To List</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}