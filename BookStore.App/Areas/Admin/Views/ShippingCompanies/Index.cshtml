@model IEnumerable<ShippingCompany>


<div class="row pt-4 mb-3">
    <div class="col-6">
        <h2 class="text-primary">Company List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Add_Update" class="btn btn-outline-primary">
            <i class="bi bi-plus-lg"></i> Create New Company
        </a>
    </div>
</div>
<table id="myTable" class="table table-bordered table-striped w-100">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Address</th>
            <th class="text-center"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Phone</td>
                    <td>@obj.Address</td>
                    <td>
                        <a asp-action="Add_Update" asp-route-id="@obj.Id" class="text-decoration-none">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a> |
                        <a asp-action="delete" asp-route-id="@obj.Id" onclick="deleteObj()" class="text-decoration-none text-danger">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>no data found</td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    <script>
        function deleteObj() {
            var decision = confirm("are you sure?");
            if (decision == false) {
                event.preventDefault();
            }
        }
    </script>
}