@model RolesVM

<form class="mt-3" asp-action="Create" method="post">
    <div class="input-group mt-3">
        <input asp-for="Name" class="form-control" placeholder="role name...." />
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">Add New Role</button>
        </div>
        <span asp-validation-for="Name" class="text-danger w-100"></span>
    </div>
</form>