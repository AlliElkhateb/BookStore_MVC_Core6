@model ShoppingCartVm

@{
    ViewData["Title"] = "All Items";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <h4 class="col-6">
                    Shopping Cart <i class="bi bi-cart"></i>
                </h4>
                <div class="col-6 text-end">
                    <a asp-area="customer" asp-controller="home" asp-action="index" class="btn btn-success">Continue Shopping</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @foreach (var item in Model.CartItems)
            {
                <div class="row p-1">
                    <div class="col-1">
                        <img src="@item.Product.ImageUrl" class="card-img" alt="Image">
                    </div>
                    <div class="col-6">
                        <h6 class="card-title">@item.Product.Title</h6>
                        <p class="card-text">@item.Product.Description.</p>
                    </div>
                    <div class="col-1">
                        <h6>Price</h6>
                        <p>@item.Price.ToString("c")</p>
                    </div>
                    <div class="col-1">
                        <h6>Count</h6>
                        <p>@item.Count</p>
                    </div>
                    <div class="col-3 row justify-content-between">
                        <div class="col-4">
                            <a asp-action="plus" asp-route-itemId="@item.Id" class="btn btn-warning w-100">
                                <i class="bi bi-plus-square"></i>
                            </a>
                        </div>
                        <div class="col-4">
                            <a asp-action="minus" asp-route-itemId="@item.Id" class="btn btn-dark w-100">
                                <i class="bi bi-dash-square"></i>
                            </a>
                        </div>
                        <div class="col-4">
                            <a asp-action="delete" asp-route-itemId="@item.Id" class="btn btn-danger w-100">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <hr />
            }
            <div class="row">
                <h5 class="col-6 ">
                    Total Price :
                </h5>
                <div class="col-6 text-end fw-bold">
                    @Model.Order.TotalPrice.ToString("c")
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <a asp-action="SubmitOrder" class="btn btn-primary">Submit Order</a>
        </div>
    </div>
</div>
